{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build":{
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "build/**", "astro/**"]
        },
        "dev":{
            "cache": false,
            "persistent": true
        },
        "lint":{
            "dependsOn": ["^build"]
        },
        "test":{
            "outputs": [
                "coverage/**"
            ]
        }
    }
}