{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "React Library",
    "compilerOptions": {
        /* === Base Options === */
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": [
            "es2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "NodeNext",
        "moduleDetection": "force",
        "moduleResolution": "NodeNext",
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2022",
        /* === React-Specific === */
        "jsx": "react-jsx",
        /* === Project-Specific === */
        "paths": {
            "@shadcn/ui/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "."
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}